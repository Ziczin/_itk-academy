[flake8]
# Максимальная длина строки (по PEP8 - 79, но можно 88)
max-line-length = 88

# Игнорируемые ошибки
ignore = 
    # E203 - пробелы перед двоеточием (конфликтует с black)
    E203,
    # E266 - слишком много '#' в комментарии
    E266,
    # W503 - перенос строки перед оператором (конфликтует с black)
    W503,
    # E501 - слишком длинная строка (контролируется max-line-length)
    E501

# Исключаемые папки и файлы
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    migrations,
    static,
    templates,
    uv.lock

# Включаемые пути (если нужно)
# include = *.py

# Статистика
statistics = True

# Количество ошибок для остановки
max-complexity = 10